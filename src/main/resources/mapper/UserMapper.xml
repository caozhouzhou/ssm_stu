<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jdwa.dao.UserMapper">
    <resultMap id="UserResultMap" type="com.jdwa.pojo.User">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="username" jdbcType="VARCHAR" property="userName" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="clazz_id" jdbcType="VARCHAR" property="clazzId" />
        <result column="email" jdbcType="INTEGER" property="email" />
        <result column="mobile" jdbcType="VARCHAR" property="mobile" />
        <result column="status" jdbcType="VARCHAR" property="status" />
        <result column="last_login_tm" jdbcType="VARCHAR" property="lastLoginTm" />
        <result column="sex" jdbcType="VARCHAR" property="sex" />
        <result column="theme" jdbcType="VARCHAR" property="theme" />
        <result column="salt" jdbcType="VARCHAR" property="salt" />
        <result column="awatar" jdbcType="VARCHAR" property="awatar" />
        <result column="desc" jdbcType="VARCHAR" property="desc" />
    </resultMap>

    <sql id="user_column">
        id,username,password,name,clazz_id,email,mobile,status,last_login_tm,sex,theme,salt,awatar,desc
    </sql>

    <select id="findAllUsers" resultMap="UserResultMap">
        SELECT
          *
        FROM t_user
    </select>
    <select id="findUserByName" resultMap="UserResultMap" parameterType = "string">
        SELECT
        *
        FROM
        t_user
        WHERE 1=1

            AND username=#{username}

    </select>
</mapper>